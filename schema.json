{
  "$id": "https://github.com/luciferous-public-lambda-layers/public-layers/blob/master/schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PublicLayersConfig",
  "type": "object",
  "additionalProperties": false,
  "required": ["core", "module"],
  "properties": {
    "core": {
      "type": "object",
      "additionalProperties": true,
      "required": ["runtimes", "architectures"],
      "properties": {
        "runtimes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "pattern": "^python[0-9]+\\.[0-9]+$"
          }
        },
        "architectures": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": ["amd64", "arm64"]
          }
        }
      }
    },
    "module": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "version", "is_individual_runtimes", "is_individual_architectures"],
        "properties": {
          "name": {"type": "string"},
          "version": {"type": "string"},
          "extras": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "is_individual_runtimes": {"type": "boolean"},
          "is_individual_architectures": {"type": "boolean"}
        }
      }
    }
  }
}